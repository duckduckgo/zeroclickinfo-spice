<div class="zci--book">
    <div class="rating-wrap">
        {{#if image_url}}
        <img src="{{ imageProxy image_url }}">
        {{/if}}
        {{#if rating}}
            <span class="rating">{{rating}}%</span>
        {{/if}}   
    </div>
    
    <h1 class="c-text__title">
        <a href="{{ url }}">{{ title }}</a>
    </h1>
    
    <div class="subtitle">by {{author}}</div>
    <div class="clear"></div>
    <div class="c-text__body">
        <div class="description">{{{ellipsis description 170}}}</div>
        <div class="source">
            <a href="{{sourceLink}}"><i>-{{source}}</i></a>
        </div>
        <div class="recommend_line">
            <span class="recommended_by">Recommended by: </span>
            {{#each recommendedBy}}
                <span class="sources_recommending">
                    <a href="{{this.link}}">
                        {{this.recommendedSource}}<span class="conj">,</span>
                    </a>
                </span>
            {{/each}}
        </div>
    </div>
</div>


