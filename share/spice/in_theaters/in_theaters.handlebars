<div class="tile  tile--c  has-detail  tile--in_theaters  opt--t-xxs">
	<div class="tile__media">
		<img src="{{imageProxy posters.detailed}}" alt="{{title}}" class="tile__media__img" />
	</div>
	<div class="tile__body">
		<h6 class="tile__title">{{title}}</h6>
		<div class="tile__rating  one-line">
		  {{{starRating ratings.normalized}}}
                  {{#if ratings.critics_score}}
                    {{ratings.critics_score}}%
                  {{/if}}
		</div>
	</div>
</div>
