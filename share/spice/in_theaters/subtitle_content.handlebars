<span class="copyright">
    Rotten Tomatoes<sup>&#169;</sup> Score
</span>

{{#if ratings.critics_score}}
  <span class="in_theaters--critics_score">
      <span class="{{icon_class}}" style="background-image: url('{{icon_url}}'); background-position: {{icon_image}}"></span>
      {{ratings.critics_rating}}: {{ratings.critics_score}}%
  </span>
{{/if}}

<span class="in_theaters--runtime">
  {{#if runtime}}
    <span>Run Time: {{InTheaters_time runtime}}</span>
  {{/if}}
  {{#and runtime mpaa_rating}}
    <span class="detail__separator"> | </span>
  {{/and}}
  {{#if mpaa_rating}}
    <span>{{mpaa_rating}}</span>
  {{/if}}
</span>

