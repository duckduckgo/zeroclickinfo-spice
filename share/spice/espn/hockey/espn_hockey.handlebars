<span class='espn_zci_tab_link espn_zci_tab_selected' id='espn_zci_news_link'>News</span> |
{{#if stats}}<span class='espn_zci_tab_link' id='espn_zci_stats_link'>Stats</span> |{{/if}}
<span class='espn_zci_tab_link' id='espn_zci_gamelog_link'>Gamelog</span>

<div class='espn_zci_tab' style='display:block' id='espn_zci_news'>
    <img src='/iu?u={{headshot}}' id='espn_news_image'>
    <div class='blurb'>
        {{name}} is a professional hockey player for the {{teamCity}} {{teamName}} ({{league}}).
    </div>
    <ul>
        {{#each headline}}
        <li><a href='{{links.web.href}}'>{{headline}}</a> ({{source}})</li>
        {{/each}}
    </ul>
</div>

{{#if stats}}
<div class='espn_zci_tab' id='espn_zci_stats'>
    <div class='blurb'>
        {{name}} {{seasonTimeFrame}} {{seasonDescription}} season statistics:
    </div>
    <table>
        {{#if goals}}<tr><th>&bull; Goals:</th><td>{{goals}}</td></tr>{{/if}}
        {{#if assists}}<tr><th>&bull; Assists</th><td>{{assists}}</td></tr>{{/if}}
        {{#if plusMinus}}<tr><th>&bull; Plus/minus:</th><td>{{plusMinus}}</td></tr>{{/if}}
        {{#if averageTimeOnIce}}<tr><th>&bull; Average time on ice:</th><td>{{averageTimeOnIce}}</td></tr>{{/if}}

        {{#if wins}}
            <tr><th>&bull; Record:</th><td>
                <span style="color:green">{{wins}}</span>/<span style="color:red">{{losses}}</span>
            </td></tr>
        {{/if}}
        {{#if saves}}<tr><th>&bull; Saves:</th><td>{{saves}}</td></tr>{{/if}}
        {{#if goalsAgainstAverage}}<tr><th>&bull; Goals against average:</th><td>{{goalsAgainstAverage}}</td></tr>{{/if}}
        {{#if overtimeLosses}}<tr><th>&bull; Overtime losses:</th><td>{{overtimeLosses}}</td></tr>{{/if}}
    </table>
</div>
{{/if}}

<div class='espn_zci_tab' id='espn_zci_gamelog'>
    <div class='blurb'>
        The {{teamCity}} {{teamName}} have a {{record}} record.
    </div>
    <div id='espn_zci_gamelog_wrapper'>
        <table>
            <th></th><th>Home</th><th></th><th>Away</th><th></th><th></th></tr>
            {{#each events}}
            <tr>
                <td>{{date}}</td>
                <td><a href='{{home.link}}'>{{home.teamName}}<a/></td>
                <td>vs</td>
                <td><a href='{{away.link}}'>{{away.teamName}}<a/></td>
                <td>
                    <a href='{{link}}'>
                        {{#if win}}
                            <span style='color:green'>W</span>
                        {{else}}
                            <span style='color:red'>L</span>
                        {{/if}}
                        {{home.score}}-{{away.score}}
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
