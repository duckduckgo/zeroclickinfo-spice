<div class="xkcd--container">
  <img src="{{imageProxy img}}" title="{{alt}}" alt="{{title}}" class="xkcd--img">
  <div class="xkcd--buttons">
  {{#xkcd_previousNum num}}
    <a href="/?q=xkcd+{{num}}" class="btn btn--primary">Prev</a>
  {{/xkcd_previousNum}}
  {{#if has_next}}
    {{#xkcd_nextNum num}}
      <a href="/?q=xkcd+{{num}}" class="xkcd-next-link btn btn--primary">Next</a>
    {{/xkcd_nextNum}}
  {{/if}}
  </div>
</div>
<div>
  {{{moreAt meta.sourceUrl meta.sourceName}}}
  <a href="{{{meta.explainLink}}}" class="xkcd--explain-link tx-clr--lt2 t-s">
    <span class="zcm__sep"></span>Explain
  </a>  
</div>