<div class="card">
    <h3>{{name}}</h3>
    <h6>{{description}}</h6>
    <ul class="zci-cricket-list">
        {{#matches}}
            {{#each this}}
                <li id="{{matchid}}" onClick="show({{matchid}});" class="{{active}}">
                    {{date}}
                </li>
            {{/each}}
        {{/matches}}
    </ul>
    <div>
        {{#matches}}
                {{#each this}}
                        <table class="zci-cricket-content {{matchid}} zci-cricket-inactive">
                            <tr>
                                <td>{{mtype}}</td>
                                <td>
                                        <span class="zci-cricket-team-name">{{this.teams.0.Team}}</span>
                                        <span class="zci-cricket-team-name">vs</span>
                                        <span class="zci-cricket-team-name">{{this.teams.1.Team}}</span>
                                </td>
                                <td>{{this.startTime}}</td>
                            </tr>
                        </table>
                {{/each}}
        {{/matches}}
    </div>
    <div class="footer">
        <a id="prev" href="#" ripple="" ripple-color="#666666" class="chevron">
        </a>
        <a id="next" href="#" ripple="" ripple-color="#666666" class="chevron"></a>
    </div>
</div>
