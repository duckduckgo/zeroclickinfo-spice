<div class="tile  tile--c tile--seat_geek" data-link="{{url}}">
    <div class="tile__body has-foot">
        <div class="header_container">
            <h3 class="tx-clr--dk">
                {{condense title maxlen="43"}}
            </h3>
            <div class="seat_geek-artist one-line">
                {{#if num_performers}}
                    {{artist}} and {{num_performers}} others
                {{/if}}
            </div>
        </div>
        <div class="tile__content">
            <div class="one-line">
            <div class="where place one-line">
                {{place}}
            </div>
            <div class="where city one-line">
                {{city}}
            </div>
            </div>
        </div>
        <div class="tile__footer">
            {{#if price}}
                <div class="price tx-clr--dk">{{price}}</div>
            {{else}}
                <div class="noprice">Price N/A</div>
            {{/if}}
            <div class="date">
                <div class="month">
                    {{#if month}}
                        {{month}}
                    {{/if}}
                </div>
                <div class="day">
                    {{#if day}}
                        {{day}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>