<div>
    {{#with entry.[0]}}
            {{#Gravatar_getEmail emails}}
                <div>
                    Email: <a href="mailto:{{value}}">{{value}}</a>
                </div>
            {{/Gravatar_getEmail}}
            {{#if aboutMe}}
                <div>
                    About: {{{condense aboutMe maxlen="60"}}}
                </div>
            {{/if}}
            {{#if currentLocation}}
                <div>
                    Location: {{{condense currentLocation maxlen="40"}}}
                </div>
            {{/if}}
            {{#if accounts}}
                <div>
                    {{#each accounts}}
                        <a href="{{url}}" title="{{display}}" class="more-links-anchor">
                            <img class="more-links" src="https://icons.duckduckgo.com/i/{{Gravatar_checkDomain domain}}.ico">
                        </a>
                    {{/each}}
                </div>
            {{/if}}
            {{#Gravatar_fallbackInfo emails aboutMe currentLocation accounts this}}
                <div>
                    Link to this profile: <a href="{{profileUrl}}" title="{{profileUrl}}">{{profileUrl}}</a>
                </div>
                <div>
                    For developers:
                    <a href="http://en.gravatar.com/{{requestHash}}.json">JSON</a> 路
                    <a href="http://en.gravatar.com/{{requestHash}}.xml">XML</a> 路
                    <a href="http://en.gravatar.com/{{requestHash}}.php">PHP</a> 路
                    <a href="http://en.gravatar.com/{{requestHash}}.vcf">VCF</a> 路
                    <a href="http://en.gravatar.com/{{requestHash}}.qr">QR</a>
                </div>
            {{/Gravatar_fallbackInfo}}
    {{/with}}
</div>