<div class="twitter--basic">
  <div class="twitter--image--wrap">
    <img src="{{imageProxy image}}" class="circle twitter--image">
  </div>
  <div class="twitter--misc">
    <h1 class="zci__header"><a href="https://twitter.com/{{user}}">{{name}}</a></h1>
      <div class="twitter--more">
        <span class="twitter--user">@{{user}}</span>
    {{#if location}}
        <span class="zcm__sep"></span>
        {{location}}
    {{/if}}
      </div>
    {{#if display_url}}
      <a class="twitter--more" href="{{expanded_url}}">{{display_url}}</a>
    {{/if}}
  </div>
</div> 
{{#if description}}
  {{#twitter_findLinks description entities.description}}
    <div class="zci__content">{{{twitter_makeLinks this}}}</div>
  {{/twitter_findLinks}}
{{/if}}
