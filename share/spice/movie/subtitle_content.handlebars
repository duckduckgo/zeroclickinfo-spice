<div class="movie__runtime">
  {{#if runtime}}
    <span>Run Time: {{movie_time runtime}}</span>
  {{/if}}
  {{#and runtime mpaa_rating}}
    <span class="sep"></span>
  {{/and}}
  {{#if mpaa_rating}}
    <span>{{mpaa_rating}}</span>
  {{/if}}
</div>

{{#if ratings.critics_rating}}
<div class="movie__rating">
  <span class="movie__rating__score">
      <img src="{{icon_image}}" class="{{is_retina}}">
      {{ratings.critics_score}}% {{ratings.critics_rating}}
  </span>
  <span class="hide--mob">
      <span class="sep"></span>
      <span class="movie__rating__copyright">
          Rotten Tomatoes<sup>&#169;</sup> Score
      </span>
  </span>
</div>
{{/if}}
