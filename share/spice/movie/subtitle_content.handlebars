{{#if ratings.critics_rating}}
  <span class="copyright">
      Rotten Tomatoes<sup>&#169;</sup> Score
  </span>

  <span class="movie--critics_score text--primary">
      <img src="{{icon_image}}" class="{{is_retina}}">
      {{ratings.critics_score}}% {{ratings.critics_rating}}
  </span>
{{/if}}

<span class="movie--runtime">
  {{#if runtime}}
    <span>Run Time: {{movie_time runtime}}</span>
  {{/if}}
  {{#and runtime mpaa_rating}}
    <span class="sep"></span>
  {{/and}}
  {{#if mpaa_rating}}
    <span>{{mpaa_rating}}</span>
  {{/if}}
</span>
