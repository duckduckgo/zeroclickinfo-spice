<div class='image-holder'>
  <img src="{{imageProxy provider_format_logos.dark}}" alt="{{provider_format_name}}" class="gwi-icon"/>
  <img src="{{imageProxy provider_format_logos.light}}" alt="{{provider_format_name}}" class="gwi-icon--alt"/>
</div>

<div class='data'>

  {{#gwi_ifHasBothBuyAndRent buy_line rent_line }}
    <div class="gwi--container">
        <div class="left half">
            Rent from<br><span class='price tx-clr--dk'>{{gwi_price rent_line}}</span>
        </div>

        <div class="right half">
            Buy from<br><span class='price tx-clr--dk'>{{gwi_price buy_line}}</span>
        </div>
    </div>
  {{else}}
    {{#gwi_buyOrRent buy_line rent_line}}
        {{#if buy_line}}
            <div class="single">
                Buy from<br/><span class='price tx-clr--dk'>{{gwi_price buy_line}}</span>
            </div>
        {{else}}
            <div class="single">
                Rent from<br/><span class="price gwi-price--subscription tx-clr--dk">{{gwi_price rent_line}}</span>
            </div>
        {{/if}}    
    {{else}}
        <div class="single">
            <span class="price gwi-price--subscription tx-clr--dk">{{gwi_fallbackText}}</span>
        </div>
    {{/gwi_buyOrRent}}
  {{/gwi_ifHasBothBuyAndRent}}
</div>

<div class="{{gwi_footerClass buy_line rent_line}} tx-clr--lt one-line">
  {{gwi_footer format_line}}
</div>